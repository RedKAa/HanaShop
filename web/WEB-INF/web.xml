<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletDispatcher</servlet-name>
        <servlet-class>hoangnt.controller.ServletDispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>hoangnt.controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryControl</servlet-name>
        <servlet-class>hoangnt.controller.SearchByCategoryControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailControl</servlet-name>
        <servlet-class>hoangnt.controller.ProductDetailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByNameControl</servlet-name>
        <servlet-class>hoangnt.controller.SearchByNameControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>hoangnt.controller.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutControl</servlet-name>
        <servlet-class>hoangnt.controller.LogoutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByPriceControl</servlet-name>
        <servlet-class>hoangnt.controller.SearchByPriceControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductManagerControl</servlet-name>
        <servlet-class>hoangnt.controller.admin.ProductManagerControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductByAdminControl</servlet-name>
        <servlet-class>hoangnt.controller.admin.AddProductByAdminControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProductControl</servlet-name>
        <servlet-class>hoangnt.controller.admin.EditProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadEditControl</servlet-name>
        <servlet-class>hoangnt.controller.admin.LoadEditControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteOneProductControl</servlet-name>
        <servlet-class>hoangnt.controller.admin.DeleteOneProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProducts</servlet-name>
        <servlet-class>hoangnt.controller.admin.DeleteProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByNameAdminControl</servlet-name>
        <servlet-class>hoangnt.controller.admin.SearchByNameAdminControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDispatcher</servlet-name>
        <url-pattern>/ServletDispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryControl</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailControl</servlet-name>
        <url-pattern>/viewProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchByNameControl</servlet-name>
        <url-pattern>/searchByName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutControl</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchByPriceControl</servlet-name>
        <url-pattern>/searchByPrice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductManagerControl</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductByAdminControl</servlet-name>
        <url-pattern>/addProductByAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProductControl</servlet-name>
        <url-pattern>/editProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadEditControl</servlet-name>
        <url-pattern>/loadEdit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteOneProductControl</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProducts</servlet-name>
        <url-pattern>/deleteProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchByNameAdminControl</servlet-name>
        <url-pattern>/searchByNameAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            150
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>HanaDB</res-ref-name>
        <res-auth>Container</res-auth>
        <res-type>javax.sql.DataSource</res-type>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>ServletDispatcher</welcome-file>
    </welcome-file-list>
</web-app>
